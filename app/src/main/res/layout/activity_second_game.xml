<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#883F1568"
    tools:context=".activities.SecondGameActivity">

    <FrameLayout
        android:id="@+id/imageViewContainer"
        android:layout_width="305dp"
        android:layout_height="479dp"
        android:background="@drawable/border_game1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158">

        <TextView
            android:id="@+id/score"
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_marginBottom="224dp"
            android:text="0/10"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewContainer"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/guestimageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            tools:srcCompat="@drawable/philippines"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"/>

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="255dp"
            android:layout_height="49dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="210dp"
            android:hint="Type your answer here"
            android:textColor="@android:color/black"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guestimageView" />

        <Button
            android:id="@+id/submitAnswerButton"
            android:layout_width="255dp"
            android:layout_height="49dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="270dp"
            android:text="Submit Answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/answerEditText" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="320dp"
            android:visibility="gone"
            android:src="@drawable/panic" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/anotherGifImageView"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="320dp"
            android:visibility="gone"
            android:src="@drawable/happy" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
